{% extends 'base_admin.html.twig' %}
{% block title %}Register{% endblock %}
{% block body %}
    <body class="page-login">
        <div class="login-wrapper">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <header class="main-header mb-4">
                <div id="header-logo">
                    <div class="logo logo-long">
                        Inscription Jobflix
                    </div>
                </div>
            </header>
            <section class="content">
                {{ form_start(registrationForm) }}
                <div class="form-group">
                    <div class="form-widget form-widget-with-icon">
                        {{ form_widget(registrationForm.firstName, {'attr': {'placeholder': 'Prénom', 'class':'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-widget form-widget-with-icon">
                        {{ form_widget(registrationForm.lastName, {'attr': {'placeholder': 'Nom', 'class':'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-widget form-widget-with-icon">
                        {{ form_widget(registrationForm.phone, {'attr': {'placeholder': 'Numéro de téléphone', 'class':'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-widget form-widget-with-icon">
                        {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Adresse Mail', 'class':'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-widget form-widget-with-icon">
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe', 'class':'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group field-button">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Valider</button>
                </div>
                {{ form_end(registrationForm) }}
            </section>
        </div>
    </body>
{% endblock %}