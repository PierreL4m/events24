<div class="row event_list">
	<div class="col-md-9">
		<a href="{{path('event_show',{'id':event.id})}}">{{event}}</a>
		<p>Responsable : {{event.manager}}</p>
	</div>
	<div class="col-md-3">
		{% if is_granted('ROLE_SUPER_ADMIN') or event.date < date('now') %}
			<a href="{{path('event_edit',{'id':event.id})}}">
				<i class='fa fa-edit'></i>
			</a>
		{% endif %}

		{{ helper.getPreviewLink(event,"pull-right")|raw }}
	</div>

</div>
<div class="row">
	<div class="col-md-12">
		<div class="clearer"></div>
	</div>
</div>
