{% extends 'admin_base.html.twig' %}

{% block title %}Status index{% endblock %}

{% block content %}
	<div class="container">
        <h1>Status</h1>
    
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Slug</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for status in statuses %}
                <tr>
                    <td>{{ status.id }}</td>
                    <td>{{ status.name }}</td>
                    <td>{{ status.slug }}</td>
                    <td>
                        <a href="{{ path('status_show', {'id': status.id}) }}">Détail</a>
                        <a href="{{ path('status_edit', {'id': status.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    
        <a href="{{ path('status_new') }}">Créer un statut</a>
    </div>
{% endblock %}
