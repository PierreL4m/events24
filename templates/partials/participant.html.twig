<div class="flex_container">
	<div class="modal_content">

		<div class="img_container">
			{% if participant.logoFile and participant.logoFile.path %}
				{% set img = '<img src="' ~ vich_uploader_asset(participant, 'logoFile') ~ '" alt="' ~ participant.name ~ '">' %}
				{% if participant.url %}
					<a href="{{participant.url}}" title="{{participant.name}}" target="_blank">
						{{img|raw}}
					</a>
				{% else %}
					{{img|raw}}
				{% endif %}
			{% endif %}
		</div>

		<div class="float_container">
			<div id="close_participant_{{participant.id}}" data-id="{{participant.id}}">
				FERMER
				<i class="fa fa-remove"></i>
			</div>

		</div>

		<div class="secondary">
			<p> {{participant.description|raw}} </p>
		</div>
	</div>
</div>
