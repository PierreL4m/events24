{% extends 'public_base.html.twig' %}
{% block custom_stylesheets %}
	<style>
		body{
			margin: 0;
		}
		.container{
	 		max-width: 600px;
		    margin: auto;
		    font-size: 1em;
	 	}
	 	.logo_container{
	 		text-align:center;
	 		margin-top:3em;
	 	}
	 	.logo_container > img{
	 		max-height:200px;
	 	}
	 	
	 	.container > .readable{
	 		text-align:center;
	 		background: inherit;
	 		width:100%;
	 		margin:1em 0;
	 		box-sizing: border-box;
	 	}
 	

 		.readable{
	 		background-color: #f2dede;
	 		font-size: 1.2em;
    		padding: 1em;
    		display:inline-block;
	 	}	 		
	 	.text-center{
	 		text-align:center;
	 	}
	</style>
{% endblock %}

{% block body %}
	<header>
	<div class="logo_container">	
		<a href="https://www.cci-estuaire-emploi.com">						
			<img src="https://www.cci-estuaire-emploi.com/wp-content/uploads/2016/07/cci_seine_estuaire_logo.png" alt="CCI Estuaire Emploi">	
		</a>
	</div>	
	</header>
	<div class="container">
		<div class="readable">			
			<p>
				Vous désinscription a bien été prise en compte.
			</p>		
			<p>
				Vous ne recevrez plus de mail de la part de estuaire emploi à l'adresse suivante
			</p>
			<p class="text-center">
				<strong> {{email}} </strong>
			</p>
		</div>
	</div>
{% endblock %}